{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "types": ["vitest/globals"],
    "paths": {
      "~": ["."],
      "~/*": ["./*"],
      "src": ["./src"],
      "src/*": ["./src/*"]
    },
  },
  "include": [
    "./**/*",
  ],
  "exclude": [
    "./node_modules"
  ]
}
